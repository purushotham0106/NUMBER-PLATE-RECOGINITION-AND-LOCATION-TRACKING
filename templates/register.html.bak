    <script>

        $(function () {

            $("#dob").datepicker({ maxDate: new Date() });



            $("#formsignin").on('submit', function (e) {

                debugger;

                if ($("#name").val() == '' && $("#password").val() == '' && $("#email").val() == '' && $("#phone").val() == '' && $("#address").val() == '' && $("#confirm_password").val() == '' && $("#confirm_password").val() == '' && $("#dob").val() == '') {

                    alert("Please Fill All Fields");
                    e.preventDefault();

                }

                else {

                    if ($("#name").val() !== '') {

                        var check = /^[A-Za-z ]+$/;
                        var username = $("#name").val();
                        if (!check.test(username)) {
                            alert('Please Enter A Valid Name');
                            e.preventDefault();
                        }

                    }
                    else {

                        alert("Please Enter Your Name");
                        e.preventDefault();

                    }

                    if ($("#phone").val() !== '') {

                        var check = /^(6|7|8|9)[0-9]{9}$/;
                        var phone = $("#phone").val();
                        if (!check.test(phone)) {
                            alert('Please Enter A Valid Phone Number');
                            e.preventDefault();
                        }

                    }
                    else {

                        alert("Please Enter Your Phone Number");
                        e.preventDefault();

                    }

                    if ($("#email").val() !== '') {

                        var check = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                        var email = $("#email").val();
                        if (!check.test(email)) {
                            alert('Please Enter A Valid Email');
                            e.preventDefault();
                        }

                    }
                    else {

                        alert("Please Enter Your Email");
                        e.preventDefault();

                    }


                    if ($("#dob").val() == '') {

                        alert("Please Enter Your Date Of Birth");
                        e.preventDefault();

                    }



                    if ($("#address").val() == '') {

                        alert("Please Enter Your Address");
                        e.preventDefault();

                    }


                    if ($("#pswd").val() === $("#confirm_password").val()) {

                        if ($("#pswd").val() == '') {

                            alert("Please Enter Your Password");
                            e.preventDefault();

                        }
                        else if ($("#confirm_password").val() == '') {

                            alert("Please Confirm Your Password");
                            e.preventDefault();

                        }

                    }
                    else {

                        alert("Your Password Doesn't Match");
                        e.preventDefault();

                    }
						var uname=document.getElementById('name').value;
							var pswd=document.getElementById('pswd').value;
							var email=document.getElementById('email').value;
							var phone=document.getElementById('phone').value;
							var addr=document.getElementById('addr').value;
							var dob=document.getElementById('dob').value;
			$.ajax({
						type: 'GET',
						url: '/regdata',
						
					contentType: 'application/json;charset=UTF-8',
						data: {
						'uname': uname,
						'dob': dob,
						'email': email,
						'phone': phone,
						'pswd': pswd,
						'addr': addr
					},
						
					dataType:"json",
						success: function(data) {
							alerter(data);
							//alert('Data saved Successfully');
						},
					});

                }


            });
			
			function alerter(data)
			{
				debugger;
				alert(data);
			}



        });
    </script>
