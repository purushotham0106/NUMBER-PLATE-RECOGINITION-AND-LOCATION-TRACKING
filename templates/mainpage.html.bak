        <div class="container">
           
<form id="upload-file" method="post" enctype="multipart/form-data">
            <div class="row justify-content-center">

                <div class="col-md-6 md-mb-0 mb-2 text-center">
                    <label class="form-control border-0 bg-transparent">Upload Image :</label>
                </div>

                <div class="col-md-6">
                    <input type="file" class="form-control" id="first_image" name="first_image"
                        onchange="previewFile(this);" />
                </div>
                <div class="text-center my-1">
                    <img src="" style="height:300px;" class="rounded mx-auto mt-2 mb-2" alt="" id="previewImg"
                        style="display:none;" />
                </div>
				

					<input type="button" value="Upload Image" onclick="uploadimg();" class="btn btn-success" style="height:100px;font-size:20px;" />
            </div>
			
			<div id="result" style="display:none;">
			
			<div class="col-lg-12 col-md-12 col-xs-12">
			
				<div class="col-md-4" style="float:left;">

						<label class="form-control border-0 bg-transparent" style="font-size:20px;font-weight:bolder;">Grayscale :</label>
					<div class="col-md-12 text-center">
						<img src="1.jpg" class="col-md-10"  alt="" id="previewImg2"
							style="display:none;" />
					</div>
					<input type="button" value="Generate Binary Image" onclick="genBin()" />

				</div>
				<div class="col-md-4" style="float:left;">

						<label class="form-control border-0 bg-transparent"  style="font-size:20px;font-weight:bolder;">Binarization :</label>
					<div class="col-md-12 text-center">
						<img src="1.jpg"  class="col-md-10" alt="" id="previewImg3"
							style="display:none;" />
					</div>
					<input type="button" value="Generate Threshold Image" onclick="genThresh()" />

				</div>
				<div class="col-md-4" style="float:left;">

						<label class="form-control border-0 bg-transparent"  style="font-size:20px;font-weight:bolder;">Threshold :</label>
					<div class="col-md-12 text-center">
						<img src="1.jpg" class="col-md-10" alt="" id="previewImg4"
							style="display:none;" />
					</div>
					<input type="button" value="Generate Masked Image" onclick="genMask()" />

				</div>
			</div>
			<br/>
            <hr>
			
			<div id="result1" style="display:none;">
			<div class="col-md-12">

						<label class="form-control border-0 bg-transparent"  style="font-size:20px;font-weight:bolder;">Mask Detected :</label>
					<div class="col-md-12 text-center">
						<img src="1.jpg" class="col-md-10" style="height:300px;" alt="" id="previewImg5"
							style="display:none;" />
					</div>

				</div>
            <div class="row justify-content-center col-md-12">

                <div class="col-6 md-mb-0 mb-2 text-center">
                    <label class="form-control border-0 bg-transparent">Tumour Detected :</label>
                </div>
                <div class="col-6 md-mb-0 mb-2 text-center">
                    <label class="form-control border-0 bg-transparent" id="diseaseval"></label>
                </div>

            </div>
            <div class="row justify-content-center">

                <div class="col-6 md-mb-0 mb-2 text-center">
                    <label class="form-control border-0 bg-transparent">Accuracy :</label>
                </div>
                <div class="col-6 md-mb-0 mb-2 text-center">
                    <label class="form-control border-0 bg-transparent" id="accval"></label>
                </div>

            </div>
			</div>
            <hr>
			</div>
</form>
